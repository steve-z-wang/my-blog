{
    "env": {
        "node": true,
        "es2023": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ], 
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended", 
        "plugin:prettier/recommended"               // enables eslint-plugin-prettier + config
    ],
    "rules": {
        "no-console": "warn",                       // tweak to taste
        "prettier/prettier": [
            "error"
        ]                                           // fail CI on format violations
    }
}