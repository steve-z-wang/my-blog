{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "baseUrl": ".",
        "paths": {
            "@my-blog/common": [
                "packages/common/src"
            ] 
        }
    }
}